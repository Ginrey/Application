@model Application.Models.RegisterRequest

@{
    ViewData["Title"] = "Register new user";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Register", "Auth"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(l => l.Login)
                @Html.TextBoxFor(l => l.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Login, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(l => l.Password)
                @Html.PasswordFor(l => l.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Password, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(l => l.PasswordConfirm)
                @Html.PasswordFor(l => l.PasswordConfirm, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.PasswordConfirm, null, new { @class = "text-danger" })
            </div>  
            
            <div class="form-group">
                @Html.LabelFor(l => l.Surname)
                @Html.TextBoxFor(l => l.Surname, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Surname, null, new { @class = "text-danger" })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(l => l.Name)
                @Html.TextBoxFor(l => l.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Name, null, new { @class = "text-danger" })
            </div> 
            
            <div class="form-group">
                @Html.LabelFor(l => l.LastName)
                @Html.TextBoxFor(l => l.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.LastName, null, new { @class = "text-danger" })
            </div> 
            
            <div class="form-group">
                @Html.LabelFor(l => l.Birthday)
                @Html.TextBoxFor(l => l.Birthday,  new { @class = "form-control", type = "date" })
                @Html.ValidationMessageFor(l => l.Birthday, null, new { @class = "text-danger" })
            </div>
            
            <div class="form-group">
                @Html.LabelFor(l => l.Email)
                @Html.TextBoxFor(l => l.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Email, null, new { @class = "text-danger" })
            </div>   
            
            <div class="form-group">
                @Html.LabelFor(l => l.Phone)
                @Html.TextBoxFor(l => l.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Phone, null, new { @class = "text-danger" })
            </div> 

            <div class="form-group">
                <input type="submit" class="btn btn-secondary" value="Register"/>
            </div>
        }
    </div>
</div>