<ul class="navbar-nav">
    @if (User.Identity is {IsAuthenticated: true })
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hello @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Login" asp-action="Logout" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Registration" asp-action="Index">Registration</a>
        </li>
    }
</ul>