@model Application.Models.LoginRequest

@{
    ViewData["Title"] = "Login at system";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Login", "Auth"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(l => l.Login)
                @Html.TextBoxFor(l => l.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Login, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(l => l.Password)
                @Html.PasswordFor(l => l.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(l => l.Password, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-secondary" value="Auth"/>
            </div>
        }
    </div>
</div>